{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "helm-values": {
    "enabled": false
  },
  "regexManagers": [
    {
      "fileMatch": ["charts/app1/values/test/.+\\.ya?ml$"],
      "matchStrings": [
        "tag:\\s*(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "nginx"
    },
    {
      "fileMatch": ["charts/app2/values/test/.+\\.ya?ml$"],
      "matchStrings": [
        "tag:\\s*(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "alpine"
    }
  ]
}
