{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "helm-values": {
    "enabled": false
  },
  "regexManagers": [
    {
      "fileMatch": ["^charts/app1/values/test/.+\\.ya?ml$"],
      "matchStrings": ["image:\\s*tag:\\s*(?<currentValue>\"?[\\w.-]+\"?)"],
      "depNameTemplate": "ghcr.io/benhesketh21/app1",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    } 
  ]
}
