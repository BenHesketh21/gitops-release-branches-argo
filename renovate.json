{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "helm-values": {
    "enabled": false
  },
  "regexManagers": [
    {
      "fileMatch": ["charts/app1/values/test/.+\\.ya?ml$"],
      "matchStrings": [
        "tag:\\s*['\"]?(?<currentValue>[^'\"\\s]+)['\"]?"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/benhesketh21/app1",
      "versioningTemplate": "regex:^(?:main-(?<major>\\d+)|v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-(?<build>\\d+))$"
    },
    {
      "fileMatch": ["charts/app2/values/test/.+\\.ya?ml$"],
      "matchStrings": [
        "tag:\\s*['\"]?(?<currentValue>[^'\"\\s]+)['\"]?"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/benhesketh21/app2",
      "versioningTemplate": "regex:^(?:main-(?<major>\\d+)|v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-(?<build>\\d+))$"
    }
  ],
  "docker": {
    "pinDigests": true
  },
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/tests/**",
    "**/__fixtures__/**"
  ]
}
