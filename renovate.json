{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "helm-values": {
    "enabled": false
  },
  "regexManagers": [
    {
      "fileMatch": ["\\.ya?ml$"],
      "matchStrings": [
        "tag:\\s*(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "nginx"
    }
  ]
}
