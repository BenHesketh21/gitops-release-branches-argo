{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["^charts/app1/values/test/values\\.ya?ml$"],
      "matchStrings": ["tag:\\s*(?<currentValue>main-[0-9]+)"],
      "depNameTemplate": "myregistry/app1",
      "datasourceTemplate": "docker",
      "versioningTemplate": "regex:^main-(?<build>\\d+)$"
    },
    {
      "fileMatch": ["^charts/app1/values/(staging|production)/values\\.ya?ml$"],
      "matchStrings": ["tag:\\s*(?<currentValue>\\S+)"],
      "depNameTemplate": "myregistry/app1",
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    },
    {
      "fileMatch": ["^charts/app2/values/test/values\\.ya?ml$"],
      "matchStrings": ["tag:\\s*(?<currentValue>main-[0-9]+)"],
      "depNameTemplate": "myregistry/app2",
      "datasourceTemplate": "docker",
      "versioningTemplate": "regex:^main-(?<build>\\d+)$"
    },
    {
      "fileMatch": ["^charts/app2/values/(staging|production)/values\\.ya?ml$"],
      "matchStrings": ["tag:\\s*(?<currentValue>\\S+)"],
      "depNameTemplate": "myregistry/app2",
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    }
  ]
}