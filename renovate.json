{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "helm-values": {
    "enabled": false
  },
  "regexManagers": [
    {
      "fileMatch": ["charts/app1/values/test/**/*.yml"],
      "matchStrings": [
        "tag:\\s*(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/benhesketh21/app1"
    },
    {
      "fileMatch": ["charts/app2/values/test/**/*.yml"],
      "matchStrings": [
        "tag:\\s*(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/benhesketh21/app2"
    }
  ]
}
