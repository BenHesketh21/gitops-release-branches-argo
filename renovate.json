{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "helm-values":{
    "commitMessageTopic": "helm values {{depName}}",
    "managerFilePatterns": [
      "/(^|/)values\\.ya?ml$/",
      "/charts/.+/values/test/.+/(.+\\.ya?ml)$/"
    ],
      "versioningTemplate": "regex:^main-(?<build>\\d+)$",
    "pinDigests": false
  }
}
