{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["^charts/app1/values/test/.+\\.ya?ml$"],
      "matchStrings": ["tag:\\s*(?<currentValue>\\S+)"],
      "depNameTemplate": "ghcr.io/benhesketh21/app1",
      "datasourceTemplate": "docker",
      "versioningTemplate": "regex:^main-(\\d+)$"
    },
    {
      "fileMatch": ["^charts/app1/values/(staging|prod)/.+\\.ya?ml$"],
      "matchStrings": ["tag:\\s*(?<currentValue>\\S+)"],
      "depNameTemplate": "ghcr.io/benhesketh21/app1",
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    },
    {
      "fileMatch": ["^charts/app2/values/test/.+\\.ya?ml$"],
      "matchStrings": ["tag:\\s*(?<currentValue>\\S+)"],
      "depNameTemplate": "ghcr.io/benhesketh21/app2",
      "datasourceTemplate": "docker",
      "versioningTemplate": "regex:^main-(?<build>\\d+)$"
    },
    {
      "fileMatch": ["^charts/app2/values/(staging|prod)/.+\\.ya?ml$"],
      "matchStrings": ["tag:\\s*(?<currentValue>\\S+)"],
      "depNameTemplate": "ghcr.io/benhesketh21/app2",
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    }
  ]
}
 